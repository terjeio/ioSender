<UserControl x:Class="CNC.Controls.Viewer.RenderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CNC.Controls.Viewer"
             mc:Ignorable="d"
             d:DesignHeight="335" d:DesignWidth="400">
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button x:Name="button" DockPanel.Dock="Bottom" Content="Reset view" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Click="button_Click"/>
        <local:Renderer DockPanel.Dock="Top" x:Name="gcodeView"/>
    </DockPanel>
</UserControl>
